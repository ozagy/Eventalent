<html>
<head>
  <%= yield :title %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "facebook" %>
  <%= stylesheet_link_tag "bootstrap" %>
  <%= stylesheet_link_tag "main"%>
  <%= yield :css %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="header-div">
        <div class="header-inner">
            <%= link_to (image_tag "logo.png", :class => 'logo-image'), root_path %>
            <div class="nav-div">
                <ul class="nav">
                    <%= link_to '<li class="nav-item">HOME</li>', root_path %>
                    <%= link_to '<li class="nav-item">DOCUMENTATION</li>', help_path %>
                </ul>
            </div><!--/.nav-collapse -->
            <div id="user-widget">
			  <% if @current_user %>
			    Welcome <strong><%= @current_user.name %></strong>!
			    <a class='sign' id='sign-out'>Sign out</a>
			  <% else %>
			    <a class='sign' id='sign-in'>Sign in</a>
			  <% end %>
			</div>
        </div>
    </div><!-- content begin -->
    
<%= yield %>

	<div class='loading'>
		<div class='rotate-div'>
			<%= image_tag "rotate.png", :class => 'rotate' %>
			<p>
				LOADING...
			</p>
		</div>
	</div>
    <div class="footer">
    	<%= image_tag "footerlogo.png", :class => 'logo-footer' %>
		<div class='credit'>
			CopyrightÂ© 2013-2014 Eventalent | All Rights Reserved
		</div>
    </div> 

	<script>
		function refresh_fb(){
	    <% if @error %> 
	      FB.login(function(response) {
	        if (response.authResponse) {
	          console.log(response);
	          window.location = '/auth/facebook/callback';
	        }
	      },{scope: 'user_friends,user_events,friends_events'});
	    <% end %>
	    }
    </script>
</body>
</html>
